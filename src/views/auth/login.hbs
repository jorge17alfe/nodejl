<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Sign In</h3>
        </div>
        <div class="card-body">
          <img src="/img/icon.png" width="100px" class="mx-auto rounded mb-4" alt="">
          <form action="/signin" method="POST">
            <div class="form-group">
              <input id="" type="text" name="username" placeholder="Username" class="form-control"/>
            </div>
            <div class="form-group">
              <input id="" type="password" name="password" placeholder="Password" class="form-control"/>
            </div>
            <div class="form-group">
                <button class="btn btn-success btn-block">Sign In</button>
            </div>
            <div class="form-group">
                <a class="" href="/signup">If you haven't account. Register here.....</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>