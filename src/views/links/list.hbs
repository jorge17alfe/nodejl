<div class="container pb-5">
  <div class="row my-2">
    {{#each links}}
      <div class="col-md-3" style="height:300px;">
        <div class="card text-center my-3">
          <div class="card-body">
            <a href="{{url}}" target="_blank">
              <h3> {{title}}</h3>
            </a>
            <p>{{description}}</p>
            <i><small><b class="text-primary">{{timeago
                    create_at
                  }}</b></small></i>
          </div>
          <div class="col-12">
            <a
              href="/links/edit/{{id}}"
              class="btn btn-secondary btn-block  mx-2"
            >Edit</a>
            <a
              href="/links/delete/{{id}}"
              class="btn btn-danger btn-block m-2"
            >Delete Link</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
  <a href="/links/add" class="text-center">++ Add one</a>
</div>