<div class="container text-center">
  <div class="row">
    <div class="col-md-4 mx-auto my-5">
      <div class="card ">
        <div class="card-body">
          <form action="/links/add" method="post"><label for="">
            <div>
              <h1 class="text-muted">Form</h1>
            </div>
          {{#if link.id }}
              <input type="hidden" name="id" id="" class="form-control" placeholder="Title" value="{{link.id}}">
          
          {{/if}}
          <div class="form-group">
              <input type="text" name="title" id="" required class="form-control" placeholder="Title" value="{{#if link.title }}{{link.title}}{{/if}}">
          </div>
          <div class="form-group">
              <input type="text" name="url" id="" required class="form-control" placeholder="URL" value="{{#if link.url }}{{link.url}}{{/if}}">
          </div>
          <div class="form-group">
              <textarea name="description" id=""  rows="" class="form-control">{{#if link.description }}{{link.description}}{{/if}}</textarea>
          </div>
          <div class="form-group">
              <button class="btn btn-success btn-block">Save</button>
          </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>